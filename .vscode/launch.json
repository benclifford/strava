  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "strava -h",
      "program": "${workspaceFolder}/dist/src/cli.js",
      "args": ["-h"],
      "console": "integratedTerminal",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "strava -u",
      "program": "${workspaceFolder}/dist/src/cli.js",
      "args": ["-u"],
      "console": "integratedTerminal",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "strava -a -d 20191001",
      "program": "${workspaceFolder}/dist/src/cli.js",
      "args": ["-a", "-d", "20191001"],
      "console": "integratedTerminal",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "strava --auth",
      "program": "${workspaceFolder}/dist/src/cli.js",
      "args": ["--auth"],
      "console": "integratedTerminal",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
